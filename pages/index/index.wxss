/**index.wxss**/
.header {
  padding: 20rpx;
  background-color: #f3f5f7;
}
.overview {
  width: 100%;
  height: 400rpx;
  background-color: #303133;
  box-shadow: 0 4rpx 16rpx 0 #303133;
  color: #fff;
  border-radius: 10rpx;
  padding: 50rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.right-info {
  float: right;
  text-align: right
}
.right-info text {
  display: block;
  margin-bottom: 20rpx;
}
.list {
  background-color: #fff;
  padding: 30rpx;
}
.items {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  box-shadow: 0 4rpx 16rpx 0 #ccc;
  box-sizing: border-box;
  font-size: 0;
}
.items .item-img {
  width: 100%;
  height: 350rpx;
  background-color: #ccc;
}
.items .item-content {
  padding: 10rpx 30rpx 20rpx;
}
.item-content .title {
  display: block;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.item-content .price {
  display: inline-block;
  font-size: 28rpx;
  color: #F56C6C;
}
.item-content .sold {
  float: right;
  font-size: 28rpx;
  color: #F56C6C;
}